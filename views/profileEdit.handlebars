<div class="profile-edit-container">
    <p class="profile-edit-text">Edit your profile.</p>
    <form method="POST">
        <input class="profile-edit-first-name" type="text" name="FirstName" placeholder="first name"
            value={{first_name}}>
        <input class="profile-edit-last-name" type="text" name="LastName" placeholder="last name" value={{last_name}}>
        <input class="profile-edit-email" type="text" name="Email" placeholder="email" value={{email_address}}>
        <input class="profile-edit-password" type="password" name="Password" placeholder="password">
        <input class="profile-edit-age" type="text" name="Age" placeholder="age" value={{age}}>
        <input class="profile-edit-city" type="text" name="City" placeholder="city" value={{city}}>
        <input class="profile-edit-homepage" type="text" name="Homepage" placeholder="homepage" value={{url}}>
        <input class="profile-edit-btn-submit" type="submit" value="UPDATE">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>