<div class="signers-container">
    <p class="signers-title">We all agree that <a href="https://en.wikipedia.org/wiki/Feral_pigeon">pigeons</a>
        are dangerous and we want to banish them from our big cities.
    </p>

    <ul>
        {{#each signatures}}
        <li class="signatures">
            {{#if this.url}}
            <a href="{{this.url}}" target="_blank">{{this.first_name}} {{this.last_name}}
            </a>
            {{else}}
            {{this.first_name}} {{this.last_name}}
            {{/if}}
            {{#if this.age}}
            | {{this.age}}
            {{/if}}
            {{#if this.city}}
            | <a href="/petition/signers/{{this.city}}">{{this.city}}</a>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</div>

{{>logout}}

